<div class="cart-container container mt-4">
  <h2 class="text-center mb-4">Shopping Cart</h2>
  
  {{#if products.length}}
    <ul class="list-group mb-3">
      {{#each products}}
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <h5 class="mb-1">{{name}}</h5>
            <p class="mb-1">Price: ${{price}}</p>
          </div>
        </li>
      {{/each}}
    </ul>
    
    <button class="btn btn-danger btn-block" id="clearCartButton">Eliminar Carrito</button>
  {{else}}
    <p class="alert alert-warning text-center">No hay productos en el carrito</p>
  {{/if}}
</div>
